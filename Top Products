    <!-- JAVASCRIPT FOR EMAIL COLLECTION -->
    <script>
        document.getElementById('emailForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = this.querySelector('input[type="text"]').value;
            const email = this.querySelector('input[type="email"]').value;
            
            // Save to localStorage (or send to your email service)
            localStorage.setItem('lead', JSON.stringify({ name, email }));
            
            alert(`Thanks, ${name}! Check your email for exclusive offers.`);
            this.reset();
        });
    </script>
